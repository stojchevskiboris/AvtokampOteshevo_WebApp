@model Project_IT.Models.AddToRoleModel
@{
    ViewBag.Title = "Додај привилегија на корисник";
}

<h2>@ViewBag.Title</h2>
<h2>@ViewBag.Message</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">Save</button>
}

